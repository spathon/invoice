doctype 5
html(ng-app='invoiceApp')
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
  body(ng-controller="MainCtrl")
    .container.hidden-print
      .row.header(role="banner")
        .col-xs-6
          a(href="/") Invoice App
        .col-xs-6
          nav(role="navigation")
            ul
              li
                a(href="/list") List invoices
    .container(ng-view)

    script(src="lib/jquery-2.0.3.min.js")
    script(src='lib/angular/angular.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')

    script(src='js/controllers/MainCtrl.js')
    script(src='js/controllers/InvoiceListCtrl.js')
